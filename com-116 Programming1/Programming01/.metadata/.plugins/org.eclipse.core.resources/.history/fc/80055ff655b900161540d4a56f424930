import java.util.*;

public class Problem1159 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int a = 0;
		int b = 0;
		int sum = 0;
		for (boolean run = true; run; sum=0) {
			int x = input.nextInt();
			a += x;
			if (x == 0) {
				run = false;
			} else {
				while (b < 5) {
					if (a % 2 == 0) {
						sum += a;
						++b;
					}
					++a;
				}
			}
			System.out.println(sum);
		}
	}
}
