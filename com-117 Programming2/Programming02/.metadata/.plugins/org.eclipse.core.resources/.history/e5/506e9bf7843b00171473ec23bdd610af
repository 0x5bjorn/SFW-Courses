import java.awt.*;

public class Rect extends Figure {
	private int w;
	private int h;
	private int puz;

	public Rect(int x, int y, int w, int h, int puz) {
		super(x, y);
		this.w = w;
		this.h = h;
		this.puz = puz;
	}

	@Override
	public void draw(Graphics g) {
		g.setColor(Color.GRAY);
		g.fillRoundRect(x, y, w, h, w / 5, h / 5);
		g.setColor(Color.RED);
		g.drawRoundRect(x, y, w, h, w / 5, h / 5);

		FontMetrics fm = g.getFontMetrics();
		int stringWidth = fm.stringWidth(String.valueOf(puz));
		int stringAscent = fm.getAscent();
		g.drawString(String.valueOf(puz), w / 2 - stringWidth / 2, h / 2 - stringAscent / 2);
		g.setFont(new Font(String.valueOf(puz), Font.BOLD, 30));
	}

	@Override
	public boolean contains(int x, int y) {
		boolean b1 = this.x <= x && x <= this.x + this.w;
		boolean b2 = this.y <= y && y <= this.y + this.h;
		return b1 && b2;
	}
}
